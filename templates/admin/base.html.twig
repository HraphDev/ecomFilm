<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Admin Dashboard - MovieZone{% endblock %}</title>

  <!-- Include common CSS files -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.3/dist/tailwind.min.css" rel="stylesheet">
  <link href="{{ asset('styles/style.css') }}" rel="stylesheet">
  <link href="{{ asset('styles/sidebar.css') }}" rel="stylesheet">
  <link rel="stylesheet" href="{{ asset('styles/search.css') }}">
  <link rel="stylesheet" href="{{ asset('styles/darklight.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .navbar-dark .navbar-nav .nav-link {
      color: rgba(0, 0, 0, 0.8);
    }

    .navbar-dark .navbar-nav .nav-link:hover {
      color: rgba(0, 0, 0, 1);
    }

    .video-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      overflow: hidden;
    }
    .table th, .table td {
    text-align: center;
    vertical-align: middle;
}
  </style>
</head>

<body class="bg-light">
  <div class="video-container">
    <video autoplay muted loop id="navBackground">
      <source src="{{ asset('videos/video2.mp4') }}" type="video/mp4">
    </video>
  </div>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-transparent px-5">
    <a class="navbar-brand" href="{{ path('admin_dashboard') }}">
      <h1 class="text-black">Admin Dashboard</h1>
    </a>
    <div class="d-flex ms-auto align-items-center">
      </div>
      <div class="dropdown me-3">
      
     
      </div>
      <div class="theme-toggle mt-3 mb-3">
        <button id="themeToggle" class="btn btn-outline-light text-black">
          <i class="fas fa-moon"></i>
        </button>
      </div>
    </div>
    <a href="{{ path('logout') }}" class="text-dark"><i class="fas fa-sign-out-alt fa-lg"></i></a>
  </nav>

 <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div id="sidebar" class="col-md-2 text-white vh-100 px-4 sidebar">
        <div class="sidebar-video-container">
          <video autoplay muted loop class="sidebar-video">
            <source src="{{ asset('videos/sidebar-bg.mp4') }}" type="video/mp4">
          </video>
          <div class="sidebar-overlay"></div>
        </div>
        <ul class="nav flex-column">
          <br>
          <li class="nav-item mb-3">
            <a href="{{ path('admin_dashboard') }}" class="nav-link text-white"><i class="fas fa-home me-2"></i>Home</a>
          </li>
          <li class="nav-item mb-3">
            <a href="{{ path('admin_movies') }}" class="nav-link text-white"><i class="fas fa-film me-2"></i>Movies</a>
          </li>
   <li class="nav-item mb-3">
    <a class="nav-link text-white" href="{{ path('admin_series') }}">
        <i class="fas fa-tv me-2"></i>Series
    </a>
</li>
<li class="nav-item mb-3">
    <a href="{{ path('admin_cartoons') }}" class="nav-link text-white">
        <i class="fas fa-paw me-2"></i>Cartoons
    </a>
</li>
<li class="nav-item mb-3">
    <a href="{{ path('admin_classical_films') }}" class="nav-link text-white">
        <i class="fas fa-film me-2"></i>Classic Film
    </a>
</li>
<li class="nav-item mb-3">
    <a href="{{ path('category_index') }}" class="nav-link text-white">
        <i class="fas fa-tags me-2"></i>Category
    </a>
</li>
<li class="nav-item mb-3">
    <a href="{{ path('director_index') }}" class="nav-link text-white">
        <i class="fas fa-users me-2"></i>Directory
    </a>
</li>
<li class="nav-item mb-3">
    <a href="{{ path('user_index') }}" class="nav-link text-white">
        <i class="fas fa-user-cog me-2"></i>Users
    </a>
</li>

  </div>

 <!-- Main Content -->
      <div class="col-md-10">
        {% block content %}
        {% endblock %}
      </div>
    </div>
  </div>
  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-4" style="position: relative; bottom: 0; width: 100%; left: 0;">
    <p>&copy; 2025 MovieZone | Contact: support@moviezone.com</p>
  </footer>

  <!-- Common JavaScript files -->
  <script src="{{ asset('js/scripts.js') }}"></script>
  <script src="{{ asset('js/caroussel.js') }}"></script>
  <script src="{{ asset('js/charts.js') }}"></script>
  <script src="{{ asset('js/search.js') }}"></script>
  <script src="{{ asset('js/theme.js') }}"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
</body>

</html>
