{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard - Series{% endblock %}

{% block content %}
  <!-- Series CRUD -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <center>
            <h5 class="card-title">Manage Series</h5>
          </center>
          <a href="{{ path('series_create') }}" class="btn btn-primary">Add New Series</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Series List -->
  <div class="card">
    <div class="card-body">
      <center>
        <h1 class="card-title">Series List</h1>
      </center>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Seasons</th>
            <th scope="col">Episodes</th>
            <th scope="col">Price</th>
            <th scope="col">Release Date</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for series in series %}
            <tr>
              <td>{{ series.title }}</td>
              <td>{{ series.seasons }}</td>
              <td>{{ series.episodes }}</td>
              <td>{{ series.price }}</td>
              <td>{{ series.releaseDate|date('Y-m-d') }}</td>
              <td>
                <a href="{{ path('series_edit', {'id': series.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                <a href="{{ path('series_delete', {'id': series.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this series?')">Delete</a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="6" class="text-center">No series available</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
