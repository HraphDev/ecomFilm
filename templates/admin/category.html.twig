{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard - Categories{% endblock %}

{% block content %}
  <!-- Categories CRUD -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <center>
            <h5 class="card-title">Manage Categories</h5>
          </center>
          <a href="{{ path('category_create') }}" class="btn btn-primary">Add New Category</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Category List -->
  <div class="card">
    <div class="card-body">
      <center>
        <h1 class="card-title">Category List</h1>
      </center>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Category Name</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for category in categories %}
            <tr>
              <td>{{ category.name }}</td>
              <td>
                <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-warning btn-sm">Edit</a>
                <a href="{{ path('category_delete', { 'id': category.id }) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="2" class="text-center">No categories available</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
