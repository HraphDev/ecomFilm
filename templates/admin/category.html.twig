{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard - Categories{% endblock %}

{% block content %}
<div class="row mb-4">
    <div class="col-md-4 offset-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Manage Categories</h5>
                <a href="{{ path('category_create') }}" class="btn btn-primary w-100">Add New Category</a>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header text-center">
        <h1 class="h4">Category List</h1>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead >
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td class="text-center">
                            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-warning btn-sm">
                                Edit
                            </a>
                            <a href="{{ path('category_delete', { 'id': category.id }) }}" 
                               class="btn btn-danger btn-sm" 
                               onclick="return confirm('Are you sure you want to delete this category?');">
                                Delete
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center text-muted">No categories available</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
