{% extends 'admin/base.html.twig' %}

{% block title %}Create New Cartoon{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <center>
    <h1>Create New Cartoon</h1>

    <form action="{{ path('cartoon_create') }}" method="POST" enctype="multipart/form-data">

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" class="form-control" required></textarea>
        </div>

        <div class="form-group">
            <label for="releaseDate">Release Date</label>
            <input type="date" id="releaseDate" name="releaseDate" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" class="form-control" step="0.01" required>
        </div>

        <div class="form-group">
            <label for="imagePath">Image</label>
            <input type="file" id="imagePath" name="imagePath" class="form-control">
        </div>

        <div class="form-group">
            <label for="videoPath">Video</label>
            <input type="file" id="videoPath" name="videoPath" class="form-control">
        </div>
           <!-- Categories Checkbox -->
        <div class="form-group">
          <label for="categories">Categories</label>
          <div id="categories">
            {% for category in categories %}
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="categories[]" value="{{ category.id }}" id="category{{ category.id }}">
                <label class="form-check-label" for="category{{ category.id }}">
                  {{ category.name }}
                </label>
              </div>
            {% endfor %}
          </div>
        </div>

        <!-- Directors Checkbox -->
        <div class="form-group">
          <label for="directors">Directors</label>
          <div id="directors">
            {% for director in directors %}
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="directors[]" value="{{ director.id }}" id="director{{ director.id }}">
                <label class="form-check-label" for="director{{ director.id }}">
                  {{ director.name }}
                </label>
              </div>
            {% endfor %}
          </div>
        </div>


        <button type="submit" class="btn btn-primary">Create Cartoon</button>
    </form>

    <a href="{{ path('cartoon_index') }}">Back to List</a>
    </div>
    </div>
{% endblock %}
