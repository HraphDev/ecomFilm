{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block content %}
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
        <center>
            <h5 class="card-title">Manage Movies</h5>
          </center>
         
                    <div class="card-body d-flex justify-content-between align-items-center">
          
          <a href="{{ path('admin_movies') }}" class="btn btn-primary">Go to Movies</a>  
            <a href="{{ path('admin_classical_films') }}" class="btn btn-danger">Go to Classical Movies</a>
        </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <center>
            <h5 class="card-title">Manage Series</h5>
          </center>
          <a href="{{ path('admin_series') }}" class="btn btn-success">Go to Series</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <center>
            <h5 class="card-title">Manage Cartoons</h5>
          </center>
          <a href="{{ path('admin_cartoons') }}" class="btn btn-warning">Go to Cartoons</a>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <center>
        <h1 class="card-title">Users Messages</h1>
      </center>

      {% if contactMessages is not empty %}
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Message</th>
              <th scope="col">Sent At</th>
            </tr>
          </thead>
          <tbody>
            {% for message in contactMessages %}
              <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.name }}</td>
                <td>{{ message.email }}</td>
                <td>{{ message.message }}</td>
                <td>{{ message.createdAt|date('Y-m-d H:i:s') }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% else %}
        <p>No messages have been sent yet.</p>
      {% endif %}
    </div>
  </div>
{% endblock %}
