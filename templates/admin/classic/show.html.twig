{% extends 'admin/base.html.twig' %}

{% block title %}{{ film.title }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <center>
    <h1>{{ film.title }}</h1>
    </center>
    <table class="table">
        <tr>
            <th>Description</th>
            <td>{{ film.description }}</td>
        </tr>
        <tr>
            <th>Release Date</th>
            <td>{{ film.releaseDate|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ film.price }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="{{ asset(film.imagePath) }}" alt="{{ film.title }}" style="width: 150px;"></td>
        </tr>
        <tr>
            <th>Video</th>
            <td><a href="{{ asset(film.videoPath) }}" target="_blank">Watch Video</a></td>
        </tr>
        <tr>
            <th>Categories</th>
            <td>
                {% for category in film.categories %}
                    {{ category.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Directors</th>
            <td>
                {% for director in film.directors %}
                    {{ director.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Actors</th>
            <td>
                {% for actor in film.actors %}
                    {{ actor.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
        </tr>
    </table>

    <a href="{{ path('classical_edit', {'id': film.id}) }}">Edit</a>
    <a href="{{ path('classical_delete', {'id': film.id}) }}" onclick="return confirm('Are you sure you want to delete this film?')">Delete</a>
    <a href="{{ path('classical_index') }}">Back to List</a>
       </div>
        </div>

{% endblock %}
