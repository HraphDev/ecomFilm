{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard - Cartoons{% endblock %}

{% block content %}
  <!-- Cartoons CRUD -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <center>
            <h5 class="card-title">Manage Cartoons</h5>
          </center>
          <a href="{{ path('cartoon_create') }}" class="btn btn-primary">Add New Cartoon</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Cartoon List -->
  <div class="card">
    <div class="card-body">
      <center>
        <h1 class="card-title">Cartoon List</h1>
      </center>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Cartoon Title</th>
            <th scope="col">Category</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
       <tbody>
    {% for cartoon in cartoons %}
        <tr>
            <td>{{ cartoon.title }}</td>
            <td>
                {% for category in categories %}
                    {{ category.name }} {% if not loop.last %}, {% endif %}
                {% endfor %}
            </td>
            <td>
                <a href="{{ path('cartoon_edit', { 'id': cartoon.id }) }}" class="btn btn-warning btn-sm">Edit</a>
                <a href="{{ path('cartoon_delete', {'id': cartoon.id}) }}" onclick="return confirm('Are you sure you want to delete this cartoon?');">Delete</a>
            </td>
        </tr>
    {% endfor %}
</tbody>
      </table>
    </div>
  </div>
{% endblock %}
