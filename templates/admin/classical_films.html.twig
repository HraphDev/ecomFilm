{% extends 'admin/base.html.twig' %}

{% block title %}Classical Films Management{% endblock %}

{% block content %}
  <!-- Classical Films CRUD -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <center>
            <h5 class="card-title">Manage Classical Films</h5>
          </center>
          <a href="{{ path('classical_new') }}" class="btn btn-primary">Add New Classical Film</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Classical Films List -->
  <div class="card">
    <div class="card-body">
      <center>
        <h1 class="card-title">Classical Film List</h1>
      </center>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Release Date</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for film in films %}
            <tr>
              <td>{{ film.title }}</td>
              <td>{{ film.description }}</td>
              <td>{{ film.releaseDate|date('Y-m-d') }}</td>
              <td>{{ film.price }}</td>
              <td>
                <a href="{{ path('classical_edit', { 'id': film.id }) }}" class="btn btn-warning btn-sm">Edit</a>
                <a href="{{ path('classical_delete', { 'id': film.id }) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this film?')">Delete</a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5" class="text-center">No classical films available</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
