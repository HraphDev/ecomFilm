{% extends 'admin/base.html.twig' %}

{% block title %}Edit User :{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <center>
                <h5 class="card-title">Edit User:</h5>
            </center>
            <form method="post">
                <div class="mb-3">
                    <label for="firstName" class="form-label">First Name:</label>
                    <input type="text" id="firstName" name="firstName" value="{{ user.firstName }}" required class="form-control">
                </div>

                <div class="mb-3">
                    <label for="lastName" class="form-label">Last Name:</label>
                    <input type="text" id="lastName" name="lastName" value="{{ user.lastName }}" required class="form-control">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" value="{{ user.email }}" required class="form-control">
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" id="username" name="username" value="{{ user.username }}" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="profilePicture" class="form-label">Profile Picture URL:</label>
                    <input type="text" id="profilePicture" name="profilePicture" value="{{ user.profilePicture }}" class="form-control">
                </div>

                <center>
                    <button type="submit" class="btn btn-success">Save</button>
                    <a href="{{ path('user_index') }}" class="btn btn-secondary">Back to List</a>
                </center>
            </form>
        </div>
    </div>
{% endblock %}
