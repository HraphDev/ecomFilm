{% include 'partials/header.html.twig' %}

<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center mb-4">Create an Account</h2>

                {# Display errors if any #}
                {% if app.session.flashbag.has('error') %}
                    <div class="alert alert-danger">
                        {% for message in app.session.flashbag.get('error') %}
                            <p>{{ message }}</p>
                        {% endfor %}
                    </div>
                {% endif %}

                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.username, 'Username', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.username) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.password.first, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.password.first) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.password.second, 'Confirm Password', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.password.second) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.firstName) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                {{ form_end(form) }}

                <div class="text-center mt-3">
                    <p>Already have an account? <a href="{{ path('login') }}" class="text-primary">Login here</a></p>
                </div>
            </div>
        </div>
    </div>
{% include 'partials/footer.html.twig' %}
